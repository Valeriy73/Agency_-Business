header.header
	.header__top
		.container
			.contacts
				a.contact(href="tel:+380639999999")
					i.fa.fa-mobile(aria-hidden="true")
					span.contact__text 63 999 99 99

				a.contact(href="malito:info@business.co")
					i.fa.fa-envelope(aria-hidden="true")
					span.contact__text info@business.co

				a.facebook-icon(href="facebook.com")
					i.fa.fa-facebook-square(aria-hidden="true")
	.container
		.header__bottom
			.logo
				img.logo__picture(src="images/logo.png" alt="picture")
			nav.nav
				- var items = ['Home', 'About Us', 'Our Approch', 'Our Work']
				each item in items
					if item === 'Home'
						a.nav__link.nav__link--active(href="#")=item
					else
						a.nav__link(href="#")=item
			a.button.header__button.header__button--red(href="#") Free Consultation